<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:fitsSystemWindows="true">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1" />


    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/lotus_white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileImageContainer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="@color/saffron"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/text_on_accent"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@id/profileImageContainer"
                        app:layout_constraintBottom_toBottomOf="@id/profileImageContainer"
                        app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                        app:layout_constraintEnd_toStartOf="@id/actionsContainer">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amasha Weerasuriya"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:layout_marginBottom="4dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/example_email_com"
                            android:textSize="14sp"
                            android:textColor="@color/ink_medium" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/actionsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:cardBackgroundColor="@color/coral_red"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="2dp"
                            android:layout_marginEnd="8dp">

                            <ImageButton
                                android:id="@+id/btnEditProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/edit_profile"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/text_on_accent" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:cardBackgroundColor="@color/meditation_blue"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="2dp">

                            <ImageButton
                                android:id="@+id/btnSettings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/settings"
                                android:src="@drawable/ic_settings"
                                app:tint="@color/text_on_accent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/secondary_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardBackgroundColor="@color/accent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <Button
                            android:id="@+id/tab_saved"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Saved"
                            android:textColor="@color/text_on_accent"
                            android:background="?attr/selectableItemBackground"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        app:cardBackgroundColor="@color/coral_red"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/tab_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            android:textColor="@color/text_on_accent"
                            android:background="?attr/selectableItemBackground"
                            android:padding="12dp"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardBackgroundColor="@color/meditation_blue"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/tab_settings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="@color/text_on_accent"
                            android:background="?attr/selectableItemBackground"
                            android:padding="12dp"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/secondary_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gatha"
                            app:tint="@color/meditation_blue"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/txtSavedGatha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arsenal_bold_italic"
                            android:text="SAVED GATHA"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 items"
                            android:textColor="@color/ink_medium"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arsenal_bold_italic"
                                android:text="@string/ratana_sutta1"
                                android:textColor="@color/accent"
                                android:textSize="16sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The discourse on the three jewels"
                                android:textColor="@color/ink_medium"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/accent"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_jataka"
                                    app:tint="@color/saffron"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/coral_red"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_headset"
                                    app:tint="@color/text_on_accent"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arsenal_bold_italic"
                                android:text="Mangala Sutta"
                                android:textColor="@color/accent"
                                android:textSize="16sp"
                                android:layout_marginBottom="4dp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The discourse on blessings"
                                android:textColor="@color/ink_medium"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/accent"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_jataka"
                                    app:tint="@color/saffron"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/coral_red"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_headset"
                                    app:tint="@color/text_on_accent"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/secondary_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_jataka"
                            app:tint="@color/saffron"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/txtSavedJataka"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arsenal_bold_italic"
                            android:text="@string/saved_jataka"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 item"
                            android:textColor="@color/ink_medium"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arsenal_bold_italic"
                                android:text="Sama Jataka"
                                android:textColor="@color/accent"
                                android:textSize="16sp"
                                android:layout_marginBottom="4dp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The devoted son's love for his parents"
                                android:textColor="@color/ink_medium"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/accent"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_jataka"
                                    app:tint="@color/saffron"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="@color/coral_red"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_headset"
                                    app:tint="@color/text_on_accent"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/lotus_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_quote"
                            app:tint="@color/meditation_blue"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/txtSavedQuotes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arsenal_bold_italic"
                            android:text="SAVED QUOTES"
                            android:textColor="@color/accent"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 items"
                            android:textColor="@color/ink_medium"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@color/secondary_surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:fontFamily="@font/arsenal_bold_italic"
                            android:text="\Do not dwell in the past, do not dream of the future, concentrate the mind on the present moment."
                        android:textColor="@color/accent"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/secondary_surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:fontFamily="@font/arsenal_bold_italic"
                            android:text="\The fool who knows he is a fool is wise at least to that extent."
                        android:textColor="@color/accent"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/lotus_white"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">


            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="goHome">

                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="@color/coral_red"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_home"
                        app:tint="@color/text_on_accent"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:fontFamily="@font/arsenal_bold"
                    android:textColor="@color/accent"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_jataka"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="goJataka">

                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="@color/accent_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_jataka"
                        app:tint="@color/text_on_accent"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jataka"
                    android:fontFamily="@font/arsenal_bold"
                    android:textColor="@color/accent"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_pirith"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="goPirith">

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="@color/meditation_blue"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/greeting"
                        app:tint="@color/text_on_accent"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pirith"
                    android:fontFamily="@font/arsenal_bold"
                    android:textColor="@color/accent"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="goProfile">

                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="@color/saffron"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_profile"
                        app:tint="@color/text_on_accent"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arsenal_bold"
                    android:text="@string/profile"
                    android:textColor="@color/saffron"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
