<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp">

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/saffron"
                android:layout_marginEnd="12dp" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle_dot"
                android:backgroundTint="@color/meditation_blue" />

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/saffron"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:cardBackgroundColor="@color/lotus_white"
            app:cardCornerRadius="120dp"
            app:cardElevation="8dp"
            android:layout_marginVertical="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/primary_surface"
                app:cardCornerRadius="100dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imgLotus"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:contentDescription="Lotus icon"
                    android:src="@drawable/ic_lotus"
                    app:tint="@color/coral_red"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/arsenal_bold_italic"
            android:textColor="@color/coral_red"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/lotus_white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Discover the blessings of Pirith,\nJataka tales, and timeless Buddhist wisdom."
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:fontFamily="@font/arsenal_bold_italic"
                android:lineSpacingExtra="4dp"
                android:padding="20dp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle_dot"
                android:backgroundTint="@color/coral_red"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_dot"
                android:backgroundTint="@color/ink_light"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_dot"
                android:backgroundTint="@color/ink_light" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/lotus_white"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnSkip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Skip"
                    android:textColor="@color/ink_medium"
                    android:backgroundTint="@color/secondary_surface"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/arsenal_bold_italic"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="12dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next"
                    android:textColor="@color/text_on_accent"
                    android:backgroundTint="@color/coral_red"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/arsenal_bold_italic"
                    android:padding="14dp"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    android:elevation="2dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
